    { "de": "er", "fa": "او (مرد)" },
    { "de": "sie", "fa": "او (زن) / آنها" },
    { "de": "es", "fa": "آن" },
    { "de": "wir", "fa": "ما" },
    { "de": "ihr", "fa": "شماها (غیررسمی)" },

    { "de": "sein", "fa": "بودن" },
    { "de": "bin", "fa": "هستم" },
    { "de": "bist", "fa": "هستی" },
    { "de": "ist", "fa": "است" },
    { "de": "sind", "fa": "هستند" },

    { "de": "lernen", "fa": "یاد گرفتن" },
    { "de": "sprechen", "fa": "صحبت کردن" },

    { "de": "Freund", "fa": "دوست" },
    { "de": "Lehrer", "fa": "معلم" },
    { "de": "Kind", "fa": "بچه" },

    { "de": "Buch", "fa": "کتاب" },
    { "de": "neu", "fa": "جدید" },
